<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping >
    <class name="donator.entities.Donator" table="Donatori">
        <id name="idDonator" type="int">
            <column name="IdDonatori"/>
            <generator class="identity"/>
        </id>
        <property name="nume" column="Nume" type="string"/>
        <property name="prenume" column="Prenume" type="string"/>
        <property name="cnp" column="CNP" type="string"/>
        <property name="dataNasterii" column="Data_Nasterii" type="string"/>
        <property name="nrTelefon" column="NumarTelefon" type="string"/>
        <property name="email" column="Email" type="string"/>
        <property name="judet" column="Judet" type="string"/>
        <property name="oras" column="Oras" type="string"/>
        <property name="strada" column="Strada" type="string"/>
        <property name="apartament" column="Apartament" type="string"/>
        <property name="bloc" column="Bloc" type="string"/>
        <property name="scara" column="Scara" type="string"/>
        <property name="numar" column="Numar" type="string"/>
        <property name="codPostal" column="CodPostal" type="int"/>
        <property name="latitudine" column="latitudine" type="double"/>
        <property name="longitudine" column="longitudine" type="double"/>

    </class>
</hibernate-mapping>